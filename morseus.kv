#:kivy 1.10.0


<MorseusLayout>:
    cols: 1

    canvas:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            pos: self.pos
            size: self.size

    TabbedPanel:
        do_default_tab: False

        MorseusTab:
            id: receive_tab
            text: "Receive"

            GridLayout:
                cols: 1

                MorseusCamera:
                    id: morseus_camera
                    play: True
                    resolution: 120, 90

                TextInput:
                    size_hint: 0.4, 0.4
                    background_color: 0.8, 0.8, 0.8, 1
                    readonly: True
                    text: root.output_text

        MorseusTab:
            id: send_tab
            text: "Send"

            GridLayout:
                cols: 1

                Widget:
                    canvas:
                        Color:
                            rgb: 0, 0, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size

                TextInput:
                    background_color: 0.8, 0.8, 0.8, 1
                    hint_text: "Your text here..."

                Button:
                    size_hint: 0.4, 0.4
                    text: "Start"

    Button:
        size_hint: 0.2, 0.2
        text: "Exit"
        on_release: app.stop()
